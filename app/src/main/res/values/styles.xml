<resources>
    <style name="Theme.RLearning" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:layoutDirection">rtl</item>
        <item name="fontFamily">@font/iranian_sans</item>
        <item name="android:windowBackground">@drawable/img_background</item>
        <item name="font">@font/iranian_sans</item>
    </style>

    <style name="Theme.RLearning.NoActionBar">
        <item name="android:itemBackground">?colorPrimaryDark</item>
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyActionBar.MenuTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TitleText" parent="Toolbar.TitleText">
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="backgroundColor">?colorPrimaryDark</item>
        <item name="background">?colorPrimary</item>
    </style>

    <style name="text_bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bottomView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/huge_dp</item>
        <item name="android:background">?colorPrimaryDark</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="DialogButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:paddingTop">@dimen/medium_dp</item>
        <item name="android:paddingBottom">@dimen/medium_dp</item>
        <item name="android:paddingLeft">@dimen/large_dp</item>
        <item name="android:paddingRight">@dimen/large_dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="NewDialog" parent="Theme.AppCompat">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/red</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButton</item>
    </style>
</resources>