<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_view_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/low_dp">

    <ImageView
        android:id="@+id/image_view_lesson_icon"
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/course1"
        app:srcCompat="@drawable/z2_1"
        tools:ignore="ContentDescription" />

    <com.leon.r_learning.layout.FitDoughnut
        android:id="@+id/fit_doughnut_res"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignRight="@+id/image_view_lesson_icon"
        android:layout_alignBottom="@+id/image_view_lesson_icon"
        android:layout_margin="@dimen/low_dp"
        android:visibility="gone"
        app:fdColorPrimary="@color/white"
        app:fdColorSecondary="@color/smoked"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/text_view_lesson_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_lesson_icon"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/small_dp"
        android:textSize="@dimen/text_size_medium"
        android:padding="@dimen/small_dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
</RelativeLayout>