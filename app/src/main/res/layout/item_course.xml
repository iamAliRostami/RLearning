<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/low_dp"
    android:paddingBottom="@dimen/low_dp">

    <TextView
        android:id="@+id/text_view_course_title"
        style="@style/text_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/large_dp"
        android:layout_marginRight="@dimen/large_dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="@dimen/text_size_medium" />

    <androidx.leanback.widget.HorizontalGridView
        android:id="@+id/horizontal_grid_view_lessons"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/text_view_course_title"
        android:layout_marginRight="@dimen/low_dp"
        android:layout_marginLeft="@dimen/low_dp"
        tools:listitem="@layout/item_lesson_h" />
</RelativeLayout>